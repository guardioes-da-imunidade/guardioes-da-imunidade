{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Allegro (Linux/WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing"
                }
            ]
        }
    ]
}
